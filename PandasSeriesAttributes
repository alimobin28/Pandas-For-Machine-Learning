import pandas as pd

# Creating a Series
marks = pd.Series([40, 50, 60, 70], 
                  index=["Student A", "Student B", "Student C", "Student D"], 
                  name="Marks")

print("ğŸ¯ Student Marks (Series):\n", marks)
print("\n")

# Series name
print("ğŸ“› Series Name: ", marks.name)
print("-----------------------------")

# Data type
print("ğŸ“„ Data Type: ", marks.dtypes)
print("-----------------------------")

# Number of dimensions
print("ğŸ“ Data Dimensions: ", marks.ndim)
print("-----------------------------")

# Number of elements
print("ğŸ”¢ Data Elements: ", marks.size)
print("-----------------------------")

# Shape
print("ğŸ“ Data Shape: ", marks.shape)
print("-----------------------------")

# Index
print("ğŸ“Œ Data Index: ", marks.index)
print("-----------------------------")

# First 2 values
print("ğŸ“ˆ First 2 Rows:\n", marks.head(2))
print("-----------------------------")

# Last 2 values
print("ğŸ“‰ Last 2 Rows:\n", marks.tail(2))
print("-----------------------------")

# Check if Series has any NaN values
print("â“ Has NaN Values?: ", marks.hasnans)
print("-----------------------------")

# Use info() by converting to DataFrame
marks_df = marks.to_frame()
print("â„¹ï¸ Series Info (using DataFrame):")
marks_df.info()
print("-----------------------------")
